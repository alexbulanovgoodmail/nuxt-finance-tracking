{
	"name": "nuxt-app",
	"type": "module",
	"private": true,
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"postinstall": "nuxt prepare",
		"lint": "eslint \"**/*.{js,ts,vue}\" && stylelint \"**/*.{css,scss,vue}\"",
		"lint:styles": "stylelint \"**/*.{css,scss,vue}\"",
		"lint:styles:fix": "stylelint \"**/*.{css,scss,vue}\" --fix",
		"lint:scripts": "eslint \"**/*.{js,ts,vue}\"",
		"lint:scripts:fix": "eslint \"**/*.{js,ts,vue}\" --fix",
		"format": "prettier --check \"**/*.{js,ts,vue,css,scss,json,md}\"",
		"format:fix": "prettier --write \"**/*.{js,ts,vue,css,scss,json,md}\"",
		"prepare": "husky"
	},
	"dependencies": {
		"@nuxt/ui": "^4.0.1",
		"@nuxtjs/mdc": "^0.18.0",
		"nuxt": "^4.0.3",
		"vue": "^3.5.20",
		"vue-router": "^4.5.1"
	},
	"devDependencies": {
		"@nuxt/eslint": "^1.9.0",
		"@types/eslint-config-prettier": "^6.11.3",
		"@types/node": "^24.3.0",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"husky": "^8.0.3",
		"lint-staged": "^16.1.6",
		"postcss-html": "^1.8.0",
		"postcss-scss": "^4.0.9",
		"prettier": "^3.6.2",
		"sass": "^1.91.0",
		"sass-loader": "^16.0.5",
		"stylelint": "^16.23.1",
		"stylelint-config-recommended-vue": "^1.6.1",
		"stylelint-config-standard": "^39.0.0",
		"stylelint-config-standard-scss": "^15.0.1",
		"stylelint-prettier": "^5.0.3",
		"vite-plugin-checker": "^0.10.3"
	},
	"lint-staged": {
		"*.{js,ts,vue}": "eslint --fix",
		"*.{css,scss,vue}": "stylelint --fix",
		"*.{js,ts,vue,css,scss,json,md}": "prettier --write"
	}
}
